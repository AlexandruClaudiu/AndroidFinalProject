<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutUsFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardViewColor"
        >


        <TextView
            android:id="@+id/textView9"
            android:layout_width="403dp"
            android:layout_height="332dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Introducing our mobile app, 'Traveling Journal', designed for travel enthusiasts who want to document their adventures. With this app, you can easily create travel entries, upload pictures, and tag locations. Share your journey with your friends and family with just one click. Whether you're a solo traveler or exploring new destinations with your loved ones, Traveling Journal will be your perfect companion."
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="279dp"
            android:layout_height="224dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/tournal_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>